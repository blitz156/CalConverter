<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
            android:weightSum="8">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text=""
                android:id="@+id/textViewNumber"
                android:layout_gravity="center_horizontal"/>

        <HorizontalScrollView
                android:id="@+id/history_scroll_view"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:layout_weight="1">

            <LinearLayout
                    android:id="@+id/layout_history_scroll_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#A0A0A0"
                    android:orientation="horizontal" />
        </HorizontalScrollView>

        <LinearLayout
                android:id="@+id/layout1"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="("
                    android:id="@+id/buttonLeftBkt"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text=")"
                    android:id="@+id/buttonRightBkt"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="mc"
                    android:id="@+id/buttonMC"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="m+"
                    android:id="@+id/buttonMPlus"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="m-"
                    android:id="@+id/buttonMSub"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="mr"
                    android:id="@+id/buttonMR"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="C"
                    android:id="@+id/buttonClear"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="AC"
                    android:id="@+id/buttonDel"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="%"
                    android:id="@+id/buttonPercent"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/buttonDiv"
                    android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout2"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="2nd"
                    android:id="@+id/button2ND"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="x^2"
                    android:id="@+id/buttonX2"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="x^3"
                    android:id="@+id/buttonX3"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="x^y"
                    android:id="@+id/buttonXY"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="e^x"
                    android:id="@+id/buttonEX"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="2^x"
                    android:id="@+id/button2X"
                    android:layout_weight="3"
                    android:visibility="gone"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="10^x"
                    android:id="@+id/button10X"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/button7"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/button8"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/button9"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="*"
                    android:id="@+id/buttonMul"
                    android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout3"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="1/x"
                    android:id="@+id/button1_X"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="2 sqt x"
                    android:id="@+id/button2sqrtX"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="3 sqt x"
                    android:id="@+id/button3sqrtX"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="x sqt y"
                    android:id="@+id/buttonXsqrtY"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="ln"
                    android:id="@+id/buttonLn"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="lb"
                    android:id="@+id/buttonLb"
                    android:layout_weight="3"
                    android:visibility="gone"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="log10"
                    android:id="@+id/buttonLog10"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/button4"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/button5"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/button6"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:id="@+id/buttonSub"
                    android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout4"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="x!"
                    android:id="@+id/buttonFactX"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="sin"
                    android:id="@+id/buttonSin"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="asin"
                    android:id="@+id/buttonASin"
                    android:layout_weight="3"
                    android:visibility="gone"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="cos"
                    android:id="@+id/buttonCos"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="acos"
                    android:id="@+id/buttonACos"
                    android:layout_weight="3"
                    android:visibility="gone"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="tan"
                    android:id="@+id/buttonTan"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="atan"
                    android:id="@+id/buttonATan"
                    android:layout_weight="3"
                    android:visibility="gone"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="e"
                    android:id="@+id/buttonE"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="EE"
                    android:id="@+id/buttonEE"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/button1"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/button2"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/button3"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:id="@+id/buttonAdd"
                    android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout5"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Rad"
                    android:id="@+id/buttonRad"
                    android:layout_weight="3"
                    android:visibility="gone"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Deg"
                    android:id="@+id/buttonDeg"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="sinh"
                    android:id="@+id/buttonSinH"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="asinh"
                    android:id="@+id/buttonASinH"
                    android:layout_weight="3"
                    android:visibility="gone"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="cosh"
                    android:id="@+id/buttonCosH"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="acosh"
                    android:id="@+id/buttonACosH"
                    android:layout_weight="3"
                    android:visibility="gone"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="tanh"
                    android:id="@+id/buttonTanH"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="atanh"
                    android:id="@+id/buttonATanH"
                    android:layout_weight="3"
                    android:visibility="gone"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="pi"
                    android:id="@+id/buttonPi"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Rand"
                    android:id="@+id/buttonRand"
                    android:layout_weight="3"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/button0"
                    android:layout_weight="4"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text=","
                    android:id="@+id/buttonNotInteger"
                    android:layout_weight="2"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="="
                    android:id="@+id/buttonCalc"
                    android:layout_weight="2"/>
        </LinearLayout>

    </LinearLayout>

    <com.devspark.sidenavigation.SideNavigationView
            android:id="@+id/side_navigation_view"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
</RelativeLayout>